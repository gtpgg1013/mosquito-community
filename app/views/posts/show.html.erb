<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Back Button -->
  <%= link_to posts_path, class: "inline-flex items-center gap-2 text-gray-400 hover:text-white mb-6 transition-all duration-200 group" do %>
    <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span class="font-medium">목록으로</span>
  <% end %>

  <div class="glass-card rounded-3xl overflow-hidden">
    <!-- Media -->
    <div class="bg-black/50 flex items-center justify-center relative">
      <% if @post.video? %>
        <video src="<%= @post.media_url %>" controls class="max-h-[70vh] w-auto">
          Your browser does not support the video tag.
        </video>
      <% else %>
        <img src="<%= @post.media_url %>" alt="<%= @post.title %>" class="max-h-[70vh] w-auto">
      <% end %>
    </div>

    <!-- Content -->
    <div class="p-6 md:p-8">
      <!-- Header -->
      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-2xl md:text-3xl font-black text-white mb-3"><%= @post.title %></h1>
          <div class="flex items-center gap-3 text-sm">
            <div class="flex items-center gap-2">
              <% if @post.user.avatar_url.present? %>
                <img src="<%= @post.user.avatar_url %>" alt="" class="w-10 h-10 rounded-full ring-2 ring-green-500/50">
              <% else %>
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center ring-2 ring-green-500/50">
                  <span class="text-sm font-bold text-white"><%= @post.user.display_name&.first&.upcase || '?' %></span>
                </div>
              <% end %>
              <div>
                <span class="text-white font-medium"><%= @post.user.display_name || @post.user.username || "익명" %></span>
                <div class="text-gray-500 text-xs"><%= time_ago_in_words(@post.created_at) %> 전</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Actions (if owner) -->
        <% if user_signed_in? && @post.user == current_user %>
          <div class="flex gap-2">
            <%= link_to edit_post_path(@post), class: "p-2.5 glass text-gray-400 hover:text-white rounded-xl transition-all duration-200" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            <% end %>
            <%= button_to post_path(@post), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "p-2.5 glass text-gray-400 hover:text-red-400 rounded-xl transition-all duration-200" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Description -->
      <% if @post.description.present? %>
        <p class="text-gray-300 mb-8 whitespace-pre-wrap leading-relaxed"><%= @post.description %></p>
      <% end %>

      <!-- Vote Section -->
      <div id="vote-section" class="glass rounded-2xl p-4 mb-8">
        <%= render "votes/vote_buttons", post: @post %>
      </div>

      <!-- Comments Section -->
      <div id="comments-section">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          댓글 <span class="text-gray-500 font-normal">(<%= @post.comments_count %>)</span>
        </h2>

        <!-- Comment Form -->
        <% if user_signed_in? %>
          <%= turbo_frame_tag "new_comment" do %>
            <%= render "comments/form", post: @post, comment: Comment.new %>
          <% end %>
        <% else %>
          <div class="glass rounded-2xl p-6 text-center mb-6">
            <p class="text-gray-400 mb-4">댓글을 작성하려면 로그인하세요</p>
            <button id="comment-login-btn" class="px-6 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-400 hover:to-emerald-400 rounded-xl text-white font-semibold transition-all duration-300">
              로그인
            </button>
          </div>
        <% end %>

        <!-- Comments List -->
        <%= turbo_frame_tag "comments" do %>
          <div class="space-y-4">
            <% @comments.each do |comment| %>
              <%= render "comments/comment", comment: comment %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
