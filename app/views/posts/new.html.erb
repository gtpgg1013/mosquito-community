<div class="max-w-2xl mx-auto px-4 py-8">
  <!-- Back Button -->
  <%= link_to posts_path, class: "inline-flex items-center gap-2 text-gray-400 hover:text-white mb-6 transition-all duration-200 group" do %>
    <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span class="font-medium">목록으로</span>
  <% end %>

  <div class="glass-card rounded-3xl p-6 md:p-8">
    <div class="flex items-center gap-3 mb-8">
      <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center">
        <span class="text-2xl">🦟</span>
      </div>
      <div>
        <h1 class="text-2xl font-black text-white">모기 퇴치 인증하기</h1>
        <p class="text-gray-400 text-sm">여러분의 모기 퇴치 순간을 공유하세요!</p>
      </div>
    </div>

    <%= render "form", post: @post %>
  </div>
</div>
