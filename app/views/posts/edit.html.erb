<div class="max-w-2xl mx-auto px-4 py-8">
  <!-- Back Button -->
  <%= link_to @post, class: "inline-flex items-center gap-2 text-gray-400 hover:text-white mb-6 transition-all duration-200 group" do %>
    <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span class="font-medium">게시물로 돌아가기</span>
  <% end %>

  <div class="glass-card rounded-3xl p-6 md:p-8">
    <div class="flex items-center gap-3 mb-8">
      <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-black text-white">게시물 수정</h1>
        <p class="text-gray-400 text-sm">게시물 내용을 수정합니다</p>
      </div>
    </div>

    <%= render "form", post: @post %>
  </div>
</div>
