<%= form_with model: [post, comment], class: "glass-card rounded-xl p-4 mb-6" do |f| %>
  <div class="flex gap-3">
    <% if current_user.avatar_url.present? %>
      <img src="<%= current_user.avatar_url %>" alt="" class="w-10 h-10 rounded-full flex-shrink-0 ring-2 ring-green-500/50">
    <% else %>
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center flex-shrink-0 ring-2 ring-green-500/50">
        <span class="text-sm font-bold text-white"><%= current_user.display_name&.first&.upcase || '?' %></span>
      </div>
    <% end %>

    <div class="flex-1">
      <%= f.text_area :body,
          rows: 3,
          class: "w-full px-4 py-3 glass border border-white/10 rounded-xl text-white placeholder-gray-500 focus:ring-2 focus:ring-green-500/50 focus:border-green-500/50 resize-none transition-all duration-200",
          placeholder: "댓글을 작성하세요..." %>

      <% if comment.errors[:body].any? %>
        <p class="text-red-400 text-sm mt-2 flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= comment.errors[:body].first %>
        </p>
      <% end %>

      <div class="flex justify-end mt-3">
        <%= f.submit "댓글 작성",
            class: "px-5 py-2.5 bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-400 hover:to-emerald-400 rounded-xl text-white font-semibold transition-all duration-300 cursor-pointer neon-green" %>
      </div>
    </div>
  </div>
<% end %>
