<%= turbo_frame_tag comment do %>
  <div id="<%= dom_id(comment) %>" class="glass-card rounded-xl p-4 group">
    <div class="flex gap-3">
      <% if comment.user.avatar_url.present? %>
        <img src="<%= comment.user.avatar_url %>" alt="" class="w-10 h-10 rounded-full flex-shrink-0 ring-2 ring-gray-700 group-hover:ring-green-500/30 transition-all">
      <% else %>
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-green-500/50 to-emerald-600/50 flex items-center justify-center flex-shrink-0 ring-2 ring-gray-700 group-hover:ring-green-500/30 transition-all">
          <span class="text-sm font-bold text-white"><%= comment.user.display_name&.first&.upcase || '?' %></span>
        </div>
      <% end %>

      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-2">
          <span class="font-semibold text-white"><%= comment.user.display_name || comment.user.username || "익명" %></span>
          <span class="text-gray-500 text-xs"><%= time_ago_in_words(comment.created_at) %> 전</span>
        </div>

        <p class="text-gray-300 whitespace-pre-wrap break-words leading-relaxed"><%= comment.body %></p>

        <% if user_signed_in? && comment.user == current_user %>
          <div class="mt-3 opacity-0 group-hover:opacity-100 transition-opacity">
            <%= button_to post_comment_path(comment.post, comment),
                method: :delete,
                data: { turbo_confirm: "댓글을 삭제하시겠습니까?" },
                class: "text-sm text-gray-500 hover:text-red-400 transition-colors flex items-center gap-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              삭제
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
