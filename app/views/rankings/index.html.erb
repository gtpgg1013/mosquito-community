<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="text-center mb-10">
    <div class="inline-block mb-4">
      <span class="text-6xl">🏆</span>
    </div>
    <h1 class="text-4xl md:text-5xl font-black text-white mb-3">
      모기 사냥꾼 <span class="text-gradient">랭킹</span>
    </h1>
    <p class="text-gray-400 text-lg">최고의 모기 헌터에게 영광을!</p>
  </div>

  <!-- Period Tabs -->
  <div class="flex justify-center gap-2 mb-10">
    <%= link_to rankings_path(period: "daily"), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{@period == 'daily' ? 'bg-gradient-to-r from-green-500 to-emerald-500 text-white shadow-lg shadow-green-500/25' : 'glass text-gray-300 hover:text-white'}" do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"/>
        </svg>
        일간
      </span>
    <% end %>
    <%= link_to rankings_path(period: "weekly"), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{@period == 'weekly' ? 'bg-gradient-to-r from-green-500 to-emerald-500 text-white shadow-lg shadow-green-500/25' : 'glass text-gray-300 hover:text-white'}" do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        주간
      </span>
    <% end %>
    <%= link_to rankings_path(period: "monthly"), class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{@period == 'monthly' ? 'bg-gradient-to-r from-green-500 to-emerald-500 text-white shadow-lg shadow-green-500/25' : 'glass text-gray-300 hover:text-white'}" do %>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        월간
      </span>
    <% end %>
  </div>

  <!-- Rankings List -->
  <% if @posts.any? %>
    <div class="space-y-3">
      <% @posts.each_with_index do |post, index| %>
        <% rank = index + 1 %>
        <%= link_to post_path(post), class: "flex items-center gap-4 p-4 glass-card rounded-2xl card-hover group #{rank <= 3 ? 'ring-1 ring-green-500/30' : ''}" do %>
          <!-- Rank -->
          <div class="w-14 text-center flex-shrink-0">
            <% if rank == 1 %>
              <div class="w-12 h-12 mx-auto rounded-full bg-gradient-to-br from-yellow-400 to-amber-500 flex items-center justify-center shadow-lg shadow-yellow-500/30">
                <span class="text-2xl">🥇</span>
              </div>
            <% elsif rank == 2 %>
              <div class="w-12 h-12 mx-auto rounded-full bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center shadow-lg shadow-gray-400/30">
                <span class="text-2xl">🥈</span>
              </div>
            <% elsif rank == 3 %>
              <div class="w-12 h-12 mx-auto rounded-full bg-gradient-to-br from-orange-400 to-amber-600 flex items-center justify-center shadow-lg shadow-orange-500/30">
                <span class="text-2xl">🥉</span>
              </div>
            <% else %>
              <div class="w-10 h-10 mx-auto rounded-full glass flex items-center justify-center">
                <span class="text-lg font-bold text-gray-400">#<%= rank %></span>
              </div>
            <% end %>
          </div>

          <!-- Thumbnail -->
          <div class="w-16 h-16 rounded-xl overflow-hidden bg-gray-900 flex-shrink-0 ring-2 ring-gray-700 group-hover:ring-green-500/50 transition-all">
            <% if post.video? && post.thumbnail_url.present? %>
              <img src="<%= post.thumbnail_url %>" alt="" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
            <% elsif post.video? %>
              <video src="<%= post.media_url %>" class="w-full h-full object-cover" muted></video>
            <% else %>
              <img src="<%= post.media_url %>" alt="" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
            <% end %>
          </div>

          <!-- Info -->
          <div class="flex-1 min-w-0">
            <h3 class="text-white font-semibold truncate group-hover:text-green-400 transition-colors"><%= post.title %></h3>
            <div class="flex items-center gap-2 text-sm text-gray-400 mt-1">
              <% if post.user.avatar_url.present? %>
                <img src="<%= post.user.avatar_url %>" alt="" class="w-5 h-5 rounded-full">
              <% else %>
                <div class="w-5 h-5 rounded-full bg-gradient-to-br from-green-500/50 to-emerald-600/50 flex items-center justify-center">
                  <span class="text-[10px] font-bold text-white"><%= post.user.display_name&.first&.upcase || '?' %></span>
                </div>
              <% end %>
              <span><%= post.user.display_name || post.user.username || "익명" %></span>
            </div>
          </div>

          <!-- Score -->
          <div class="text-right flex-shrink-0">
            <div class="text-2xl font-black <%= post.score > 0 ? 'text-gradient' : post.score < 0 ? 'text-red-400' : 'text-gray-400' %>">
              <%= post.score > 0 ? "+#{post.score}" : post.score %>
            </div>
            <div class="text-xs text-gray-500 mt-1">
              <span class="text-green-400 font-medium"><%= post.upvotes_count %></span>
              <span class="mx-1">/</span>
              <span class="text-red-400 font-medium"><%= post.downvotes_count %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="glass-card rounded-3xl p-12 text-center">
      <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gradient-to-br from-yellow-500/20 to-amber-500/20 flex items-center justify-center">
        <span class="text-5xl animate-float">🏆</span>
      </div>
      <h3 class="text-2xl font-bold text-white mb-2">아직 랭킹에 오른 게시물이 없습니다</h3>
      <p class="text-gray-400 mb-8">
        <%= case @period
            when "weekly" then "이번 주"
            when "monthly" then "이번 달"
            else "오늘"
            end %> 첫 번째 모기 사냥꾼이 되어보세요!
      </p>
      <% if user_signed_in? %>
        <%= link_to new_post_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-400 hover:to-emerald-400 rounded-xl text-white font-bold transition-all duration-300 neon-green" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          업로드하기
        <% end %>
      <% else %>
        <p class="text-gray-500">로그인하고 첫 번째 헌터가 되세요!</p>
      <% end %>
    </div>
  <% end %>
</div>
