<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-3xl font-black text-white">내 아바타</h1>
        <p class="text-gray-400">나만의 모기 헌터를 꾸며보세요</p>
      </div>
    </div>
    <div class="flex gap-3">
      <%= link_to edit_avatar_path, class: "px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-bold rounded-xl hover:shadow-lg hover:shadow-green-500/25 transition-all" do %>
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          꾸미기
        </span>
      <% end %>
      <%= link_to shop_avatar_path, class: "px-4 py-2 bg-gradient-to-r from-yellow-500 to-orange-600 text-white font-bold rounded-xl hover:shadow-lg hover:shadow-yellow-500/25 transition-all" do %>
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          상점
        </span>
      <% end %>
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- Avatar Preview -->
    <div class="glass-card rounded-3xl p-8">
      <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
        <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        미리보기
      </h2>
      <div class="relative aspect-square rounded-2xl overflow-hidden bg-gradient-to-br from-gray-800 to-gray-900">
        <!-- Background Layer -->
        <% if @avatar.background_item %>
          <div class="absolute inset-0 flex items-center justify-center text-6xl opacity-30">
            <span class="text-8xl"><%= @avatar.background_item.rarity_emoji %></span>
          </div>
        <% end %>
        
        <!-- Avatar Display -->
        <div class="absolute inset-0 flex flex-col items-center justify-center">
          <!-- Head -->
          <div class="text-center mb-2">
            <% if @avatar.head_item %>
              <span class="text-4xl"><%= @avatar.head_item.rarity_emoji %></span>
              <p class="text-xs text-gray-400 mt-1"><%= @avatar.head_item.name %></p>
            <% else %>
              <div class="w-16 h-16 rounded-full bg-gray-700/50 border-2 border-dashed border-gray-600 flex items-center justify-center">
                <span class="text-gray-500 text-2xl">?</span>
              </div>
            <% end %>
          </div>
          
          <!-- Body -->
          <div class="text-center mb-2">
            <% if @avatar.body_item %>
              <span class="text-5xl"><%= @avatar.body_item.rarity_emoji %></span>
              <p class="text-xs text-gray-400 mt-1"><%= @avatar.body_item.name %></p>
            <% else %>
              <div class="w-20 h-24 rounded-xl bg-gray-700/50 border-2 border-dashed border-gray-600 flex items-center justify-center">
                <span class="text-gray-500 text-2xl">?</span>
              </div>
            <% end %>
          </div>
          
          <!-- Accessory -->
          <div class="absolute bottom-4 right-4">
            <% if @avatar.accessory_item %>
              <span class="text-3xl"><%= @avatar.accessory_item.rarity_emoji %></span>
            <% end %>
          </div>
        </div>
        
        <!-- User Info Overlay -->
        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
          <div class="flex items-center gap-3">
            <% if current_user.avatar_url.present? %>
              <img src="<%= current_user.avatar_url %>" class="w-10 h-10 rounded-full border-2 border-green-500">
            <% end %>
            <div>
              <p class="font-bold text-white"><%= current_user.display_name || current_user.email %></p>
              <p class="text-xs text-gray-400">모기 헌터</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Equipped Items -->
    <div class="glass-card rounded-3xl p-8">
      <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        장착 아이템
      </h2>
      
      <div class="space-y-4">
        <% [['head', '머리', @avatar.head_item], ['body', '몸통', @avatar.body_item], ['background', '배경', @avatar.background_item], ['accessory', '액세서리', @avatar.accessory_item]].each do |category, label, item| %>
          <div class="flex items-center justify-between p-4 rounded-xl bg-gray-800/50">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-gray-700 flex items-center justify-center">
                <% if item %>
                  <span class="text-xl"><%= item.rarity_emoji %></span>
                <% else %>
                  <span class="text-gray-500">-</span>
                <% end %>
              </div>
              <div>
                <p class="text-sm text-gray-400"><%= label %></p>
                <% if item %>
                  <p class="font-medium text-white"><%= item.name %></p>
                  <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-<%= item.rarity_color %>-500/20 text-<%= item.rarity_color %>-400">
                    <%= item.rarity.capitalize %>
                  </span>
                <% else %>
                  <p class="text-gray-500">미장착</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Stats -->
      <div class="mt-6 pt-6 border-t border-gray-700">
        <p class="text-sm text-gray-400 mb-2">보유 아이템</p>
        <p class="text-2xl font-bold text-white"><%= current_user.avatar_items.count %> <span class="text-gray-500 text-base font-normal">/ <%= AvatarItem.count %></span></p>
      </div>
    </div>
  </div>
</div>
