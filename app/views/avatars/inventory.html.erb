<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <%= link_to avatar_path, class: "p-2 rounded-xl bg-gray-800 hover:bg-gray-700 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-black text-white">인벤토리</h1>
        <p class="text-gray-400">보유한 아이템 목록</p>
      </div>
    </div>
    <p class="text-xl font-bold text-white">
      총 <span class="text-green-400"><%= @owned_items.count %></span>개
    </p>
  </div>

  <!-- Items by Category -->
  <div class="space-y-6">
    <% [['head', '머리'], ['body', '몸통'], ['background', '배경'], ['accessory', '액세서리']].each do |category, label| %>
      <div class="glass-card rounded-2xl p-6">
        <h2 class="text-lg font-bold text-white mb-4"><%= label %> (<%= (@items_by_category[category] || []).count %>)</h2>
        
        <% items = @items_by_category[category] || [] %>
        <% if items.any? %>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
            <% items.each do |item| %>
              <div class="p-4 rounded-xl bg-gray-800/50 text-center">
                <span class="text-3xl"><%= item.rarity_emoji %></span>
                <p class="text-sm font-medium text-white mt-2"><%= item.name %></p>
                <span class="inline-block px-2 py-0.5 text-xs rounded-full mt-1 bg-<%= item.rarity_color %>-500/20 text-<%= item.rarity_color %>-400">
                  <%= item.rarity.capitalize %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">보유한 <%= label %> 아이템이 없습니다</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
