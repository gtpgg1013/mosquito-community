<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <%= link_to avatar_path, class: "p-2 rounded-xl bg-gray-800 hover:bg-gray-700 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-black text-white">아바타 상점</h1>
        <p class="text-gray-400">새로운 아이템을 구매하세요</p>
      </div>
    </div>
    <div class="glass-card px-4 py-2 rounded-xl">
      <p class="text-sm text-gray-400">보유 아이템</p>
      <p class="text-xl font-bold text-white"><%= @owned_item_ids.count %> / <%= AvatarItem.count %></p>
    </div>
  </div>

  <!-- Items by Category -->
  <div class="space-y-8">
    <% [['head', '머리'], ['body', '몸통'], ['background', '배경'], ['accessory', '액세서리']].each do |category, label| %>
      <div class="glass-card rounded-3xl p-6">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
          <span class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </span>
          <%= label %>
          <span class="text-sm font-normal text-gray-400">(<%= (@items[category] || []).count %>)</span>
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
          <% (@items[category] || []).sort_by { |i| ['common', 'rare', 'epic', 'legendary'].index(i.rarity) }.each do |item| %>
            <% owned = @owned_item_ids.include?(item.id) %>
            <div class="relative group">
              <div class="p-4 rounded-xl bg-gray-800/50 border border-gray-700/50 <%= owned ? 'opacity-60' : 'hover:border-green-500/50 hover:bg-gray-700/50' %> transition-all">
                <div class="text-center mb-3">
                  <span class="text-4xl"><%= item.rarity_emoji %></span>
                </div>
                <p class="font-medium text-white text-center text-sm truncate"><%= item.name %></p>
                <div class="flex items-center justify-center gap-2 mt-2">
                  <span class="inline-block px-2 py-0.5 text-xs rounded-full bg-<%= item.rarity_color %>-500/20 text-<%= item.rarity_color %>-400">
                    <%= item.rarity.capitalize %>
                  </span>
                </div>
                <p class="text-center mt-2 text-sm">
                  <% if item.price == 0 %>
                    <span class="text-green-400">무료</span>
                  <% else %>
                    <span class="text-yellow-400"><%= number_with_delimiter(item.price) %> P</span>
                  <% end %>
                </p>

                <% if owned %>
                  <div class="mt-3 text-center">
                    <span class="inline-flex items-center gap-1 text-sm text-green-400">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      보유중
                    </span>
                  </div>
                <% else %>
                  <%= button_to buy_avatar_path(item_id: item.id), method: :post, class: "w-full mt-3 py-2 px-4 bg-gradient-to-r from-green-500 to-emerald-600 text-white text-sm font-bold rounded-lg hover:shadow-lg hover:shadow-green-500/25 transition-all" do %>
                    구매
                  <% end %>
                <% end %>
              </div>

              <!-- Tooltip -->
              <% if item.description.present? %>
                <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 rounded-lg text-sm text-gray-300 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-10">
                  <%= item.description %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Info Box -->
  <div class="mt-8 glass-card rounded-2xl p-6">
    <div class="flex items-start gap-4">
      <div class="w-10 h-10 rounded-full bg-blue-500/20 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div>
        <h3 class="font-bold text-white mb-1">포인트 획득 방법</h3>
        <ul class="text-sm text-gray-400 space-y-1">
          <li>게시물 업로드: +100 P</li>
          <li>댓글 작성: +10 P</li>
          <li>Upvote 받기: +20 P</li>
          <li>일간 랭킹 1위: +500 P</li>
        </ul>
      </div>
    </div>
  </div>
</div>
