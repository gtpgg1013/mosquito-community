<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-4">
      <%= link_to avatar_path, class: "p-2 rounded-xl bg-gray-800 hover:bg-gray-700 transition-colors" do %>
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-black text-white">아바타 꾸미기</h1>
        <p class="text-gray-400">보유한 아이템을 장착하세요</p>
      </div>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Preview (Sticky) -->
    <div class="lg:col-span-1">
      <div class="glass-card rounded-3xl p-6 lg:sticky lg:top-8">
        <h2 class="text-lg font-bold text-white mb-4">미리보기</h2>
        <div id="avatar-preview" class="relative aspect-square rounded-2xl overflow-hidden bg-gradient-to-br from-gray-800 to-gray-900 mb-4">
          <!-- Preview content updated by Turbo -->
          <%= render "avatar_preview", avatar: @avatar %>
        </div>
        <p class="text-center text-sm text-gray-400">
          아이템을 클릭하여 장착/해제
        </p>
      </div>
    </div>

    <!-- Item Selection -->
    <div class="lg:col-span-2 space-y-6">
      <% [['head', '머리', 'crown'], ['body', '몸통', 'shirt'], ['background', '배경', 'image'], ['accessory', '액세서리', 'sparkles']].each do |category, label, icon| %>
        <div class="glass-card rounded-2xl p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
              <span class="text-xl">
                <% case icon
                   when 'crown' %>
                <% when 'shirt' %>
                <% when 'image' %>
                <% when 'sparkles' %>
                <% end %>
              </span>
              <%= label %>
            </h3>
            <% current_item = @avatar.send("#{category}_item") %>
            <% if current_item %>
              <%= button_to unequip_avatar_path(category: category), method: :post, class: "text-sm text-red-400 hover:text-red-300" do %>
                해제
              <% end %>
            <% end %>
          </div>

          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
            <% (@owned_items[category] || []).each do |item| %>
              <% is_equipped = @avatar.equipped?(item) %>
              <%= button_to equip_avatar_path(item_id: item.id), method: :post, class: "relative p-4 rounded-xl transition-all #{is_equipped ? 'bg-green-500/20 ring-2 ring-green-500' : 'bg-gray-800/50 hover:bg-gray-700/50'}" do %>
                <div class="text-center">
                  <span class="text-3xl"><%= item.rarity_emoji %></span>
                  <p class="text-sm font-medium text-white mt-2 truncate"><%= item.name %></p>
                  <span class="inline-block px-2 py-0.5 text-xs rounded-full mt-1 bg-<%= item.rarity_color %>-500/20 text-<%= item.rarity_color %>-400">
                    <%= item.rarity.capitalize %>
                  </span>
                </div>
                <% if is_equipped %>
                  <div class="absolute top-2 right-2">
                    <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                <% end %>
              <% end %>
            <% end %>

            <% if (@owned_items[category] || []).empty? %>
              <div class="col-span-full text-center py-8">
                <p class="text-gray-500 mb-3">보유한 <%= label %> 아이템이 없습니다</p>
                <%= link_to shop_avatar_path, class: "text-green-400 hover:text-green-300 font-medium" do %>
                  상점에서 구매하기 →
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
